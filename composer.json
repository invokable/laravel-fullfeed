{
    "name": "revolution/laravel-fullfeed",
    "description": "Extracts the main content from web pages for use in feed readers",
    "keywords": [
        "laravel",
        "fullfeed",
        "rss"
    ],
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-dom": "*",
        "ext-libxml": "*",
        "illuminate/support": "^12.0||^13.0"
    },
    "require-dev": {
        "orchestra/testbench": "^10.0",
        "laravel/pint": "^1.22",
        "pestphp/pest": "^4.1",
        "pestphp/pest-plugin-laravel": "^4.0",
        "revolution/laravel-boost-copilot-cli": "^2.0"
    },
    "autoload": {
        "psr-4": {
            "Revolution\\Fullfeed\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/",
            "Workbench\\App\\": "workbench/app/",
            "Workbench\\Database\\Factories\\": "workbench/database/factories/",
            "Workbench\\Database\\Seeders\\": "workbench/database/seeders/"
        }
    },
    "authors": [
        {
            "name": "puklipo"
        },
        {
            "name": "kawax",
            "email": "kawaxbiz@gmail.com"
        }
    ],
    "extra": {
        "laravel": {
            "providers": [
                "Revolution\\Fullfeed\\FullfeedServiceProvider"
            ]
        }
    },
    "config": {
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "scripts": {
        "test": "vendor/bin/pest",
        "test:coverage": "pest --coverage --coverage-clover build/logs/clover.xml",
        "lint": "pint",
        "test:lint": "pint --test",
        "boost": "vendor/bin/testbench boost:install --no-interaction --ansi",
        "post-autoload-dump": [
            "@clear",
            "@prepare"
        ],
        "clear": "@php vendor/bin/testbench package:purge-skeleton --ansi",
        "prepare": "@php vendor/bin/testbench package:discover --ansi",
        "build": "@php vendor/bin/testbench workbench:build --ansi",
        "serve": [
            "Composer\\Config::disableProcessTimeout",
            "@build",
            "@php vendor/bin/testbench serve --ansi"
        ]
    }
}
